//

#include <iostream>
using namespace std;
int main()
{
    double radius, area, circumference, SphereVolume, SurfaceArea; //define variables type as double
    const double PI = 3.14159; // define pi 

    cout << "Please enter the Radius of a circle/sphere: "; //prompts the user for a radius
    cin >> radius;

    area = PI * pow(radius, 2); // equation to calculate area
    cout << "Area of the circle: " << area << endl;

    circumference = 2 * PI * radius; // equation to calculate circumference 
    cout << "Cirrcumference: " << circumference << endl;

    SphereVolume = (4.0 / 3.0) * PI * pow(radius, 3);
    cout << "Sphere Volume: " << SphereVolume << endl;

    SurfaceArea = 4 * PI * pow(radius, 2);
    cout << "Surface area of the sphere: " << SurfaceArea << endl;
 
}

