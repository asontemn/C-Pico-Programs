// Assignment 4b number reverse.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;
int main()



{
        int number, reverse = 0; //define variable 
        cout << "Enter the number you want to reverse: "; //user input
        cin >> number;

        while (number != 0) { //iterate till number equals zero
            reverse = reverse * 10 + number % 10; //divide the remainder
            number /= 10;
        }

        cout << "Reversed number is: " << reverse << endl;
        return 0;
    }

