// ConsoleApplication2.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;

int main()
{
    float x, y, answer = 0;

    cout << "enter two numbers you would like to multiply " << endl; 
    cin >> x;
    cin >> y;

    for (int a = 0; a < y; a++) { 
        answer += x;
    }

    cout << "The answer to " << x << "*" << y << " equals " << answer;

}

