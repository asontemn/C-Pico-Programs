// Random in class programs.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;

int main()

{
    int counter = 0;
    int max;
    cout << "enter number of asterisks: ";
    cin >> max;
    while ((max < 1) || (max > 100)) {
        cout << "Please enter a number between 1 & 100: ";
        cin >> max;
    }
    while (counter <max) {
        cout << "*";
        counter = counter + 1;
    }
    cout << endl;
}


// nested loop program prints rectangle w/ user input 10 & 50


#include <iostream>
using namespace std;

int main()

{
    int rows, cols;
    cout << "enter number of rows: ";
    cin >> rows;
    cout << "enter number of cols: ";
    cin >> cols;

    for (int r = 0; r < rows; r++)
    {
        for (int c = 0; c < cols; c++)
        {
            cout << "*";
        }
        cout << endl;
    
    }
}
