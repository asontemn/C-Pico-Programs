// Random in class programs.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;

int main()

{
    int counter = 0;
    int max;
    cout << "enter number of asterisks: ";
    cin >> max;
    while ((max < 1) || (max > 100)) {
        cout << "Please enter a number between 1 & 100: ";
        cin >> max;
    }
    while (counter <max) {
        cout << "*";
        counter = counter + 1;
    }
    cout << endl;
}


// nested loop program prints rectangle w/ user input 10 & 50


#include <iostream>
using namespace std;

int main()

{
    int rows, cols;
    cout << "enter number of rows: ";
    cin >> rows;
    cout << "enter number of cols: ";
    cin >> cols;                         // user inputs 

    for (int r = 0; r < rows; r++)       // outer loop checks to see if r is less than input, repeats this and inner loop untill its > input
    {
        for (int c = 0; c < cols; c++)    // inner loop checks if c is greater than input, repeats untill it is. then restarts if outer loop says so.
        {
            cout << "*";
        }
        cout << endl;
    
    }
}
